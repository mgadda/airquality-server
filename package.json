{
  "name": "airquality-server",
  "version": "0.1.0",
  "description": "Reads arduino data from serial port and serves that data via GraphQL",
  "main": "dist/src/index.js",
  "author": "Matt Gadda <mgadda@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "express": "^4.16.3",
    "express-graphql": "^0.6.12",
    "graphql": "^0.13.2",
    "morgan": "^1.9.0",
    "serialport": "^6.1.1",
    "sqlite3": "^4.0.0"
  },
  "scripts": {
    "build": "tsc",
    "build-watch": "tsc --watch",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"blue.bold,green.bold\" \"tsc --watch\" \"nodemon dist/src/index.js\"",
    "serve": "node dist/src/index.js",
    "start": "yarn run serve"
  },
  "devDependencies": {
    "@types/express": "^4.11.1",
    "@types/express-graphql": "^0.0.37",
    "@types/graphql": "^0.12.5",
    "@types/morgan": "^1.7.35",
    "@types/serialport": "^6.0.1",
    "@types/sqlite3": "^3.1.3"
  }
}
